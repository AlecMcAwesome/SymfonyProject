{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Recipe:</th>
                <th>instructions:</th>
                <th>Created By:</th>
                <th>Created At:</th>
                <th>Edit Recipe:</th>
                <th>Delete Recipe</th>
            </tr>
            </thead>
            <tbody>
            {% for Recipe in recipees %}
                <tr>
                    <td>{{ Recipe.title }}</td>
                    <td>{{ Recipe.instructions }}</td>
                    <td> {{ Recipe.user }}</td>
                    <td>{{ Recipe.createdAt|date('Y-m-d') }}</td>
                    <td><button type="button" class="btn btn-success">Edit</button>
                    </td>
                    <td><button type="button" class="btn btn-success"><a href="{{ path('admin_deleteRecipe', {'name': Recipe.title}) }}">Delete</a></button>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}