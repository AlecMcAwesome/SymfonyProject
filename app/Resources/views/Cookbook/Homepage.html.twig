{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        #header{
            display: flex;
            justify-content: center;
        }

        #underheader{
            display: flex;
            justify-content: center;
        }
    </style>


{% endblock %}
{% block body %}

    <div id="header" class="page-header">
        <h1>WELCOME TO STROM COOKBOK</h1>
    </div>

<h3 id="underheader">
    The Table shows all created recipees:
</h3>
<!-- nedenstående viser et table der har et forloop der looper igennem recipe entities og viser navn
    hvem der har lavet den og hvornår den er lavet. informationerne er hentet fra controlleren via doctrine-->
    <div class="container">
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Recipe:</th>
            <th>Created By:</th>
            <th>Created:</th>
        </tr>
        </thead>
        <tbody>
        {% for Recipe in recipes %}
            <tr>
                <!-- der er indsat et link til opskriftens profil når man trykker på dets navn -->
                <td><a href="{{ path('recipename', {'recipename': Recipe.title})}}">{{ Recipe.title }}</a>
                </td>
                <!-- der er indsat et link til brugerens profil når man trykker på deres navn -->
                <td><a href="{{ path('profilename', {'profilename' : Recipe.user})}}">{{ Recipe.user }}</a>
                </td>
                <!-- her er indsat tidspunkt. deter vigtigt at fortælle hvordan det skal indsættes -->
                <td>{{ Recipe.createdAt|date('Y-m-d') }}</td>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}