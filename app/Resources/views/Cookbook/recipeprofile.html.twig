{% extends 'base.html.twig' %}

{% block title %}
Recipe {{ recipe.title }}
{% endblock %}

{% block stylesheets %}
    <style>
        #instructions{
            width: 25%;
        }
    </style>
{% endblock %}

{% block body %}

<h1>Recipe for {{ recipe.title }}</h1>
    <h2>Created By: <a href="{{ path('profilename', {'profilename' : recipe.user}) }}"> {{ recipe.user }} </a></h2>
    <h2>Created: {{ recipe.getCreatedAt|date('Y-m-d H:i:s') }}</h2>
    <h2>Last Modified: {{ recipe.modifiedAt|date('Y-m-d H:i:s') }}</h2>

    <h2>Ingredients:</h2>
    <ul>
        {% for Recipe in recipe %}
            <li>{{ recipe.ngredients }}</li>
            {% endfor %}
    </ul>
    <h2>Instructions: </h2>
    <p id="instructions"> {{ recipe.instructions }}</p>

    <td><button type="button" class="btn btn-success">Download</button>

{% endblock %}